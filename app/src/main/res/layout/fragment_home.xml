<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/horizontal_linear_layout_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/linear_layout_horizontal"
        android:textColor="@color/cardview_dark_background"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/horizontal_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_linear_layout_text_view">



    <Button
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Button 1" />


        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button 2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button 3" />


    </LinearLayout>

    <TextView
        android:id="@+id/vertical_linear_layout_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/linear_layout_Vertical"
        android:textColor="@color/cardview_dark_background"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontal_linear_layout" />


    <LinearLayout
        android:id="@+id/Verical_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/vertical_linear_layout_text_view">



    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Button 4" />


    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Button 5" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Button 6" />

    </LinearLayout>

    <TextView
        android:id="@+id/horizontal_relative_layout_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Relative_layout"
        android:textColor="@color/cardview_dark_background"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/Verical_linear_layout" />


    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_relative_layout_text_view">


        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button 7" />


        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button 8"
            android:layout_toRightOf="@+id/button7"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button 9"
            android:layout_below="@+id/button7"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/grid_layout_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Grid_layout"
        android:textColor="@color/cardview_dark_background"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/relative_layout" />

    <GridLayout
        android:id="@+id/Grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:columnCount="4"
        android:rowCount="2"
        app:layout_constraintTop_toBottomOf="@+id/grid_layout_text_view">

        <TextView
            android:id="@+id/text_view_1"
            android:layout_row="0"
            android:layout_column="0"
            android:text="A"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/text_view_2"
            android:layout_row="0"
            android:layout_column="1"
            android:text="B"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/text_view_3"
            android:layout_row="0"
            android:layout_column="2"
            android:text="C"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/text_view_4"
            android:layout_row="0"
            android:layout_column="3"
            android:text="D"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/text_view_5"
            android:layout_row="1"
            android:layout_column="0"
            android:text="E"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="10dp"/>


        <TextView
            android:id="@+id/text_view_6"
            android:layout_row="1"
            android:layout_column="1"
            android:text="F"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="10dp"/>


        <TextView
            android:id="@+id/text_view_7"
            android:layout_row="1"
            android:layout_column="2"
            android:text="G"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/text_view_8"
            android:layout_row="1"
            android:layout_column="3"
            android:text="H"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="10dp"/>


    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>